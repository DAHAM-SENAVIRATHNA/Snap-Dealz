extends layouts/main-layout.pug 

block styles 
     link(rel="stylesheet" href="/css/product.css")
 
block content
    main   
        if prods.length > 0 
            .grid 
                each product in prods
                    article.card.product-item    
                        header.card__header 
                            h1.product__title #{product.title}
                        div.card__image    
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSVDj4OgRgtZXmDJBJs-lSvQxIy_65ONomt7Q&usqp=CAU", alt="A Book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description Follow CodeBot on a thrilling journey through the world of programming and explore the wonders of algorithms and data structures
                        .card__actions    
                            button.btn Add to Cart
        else 
            h1 No products








